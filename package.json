{
  "description": "Root package for managing the monorepo for the KNIME Design System",
  "license": "GPL 3 and Additional Permissions according to Sec. 7 (SEE the file LICENSE)",
  "author": "KNIME AG, Zurich, Switzerland",
  "type": "module",
  "scripts": {
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "run-s 'lint:* --fix'",
    "lint:js": "eslint . --cache",
    "lint:css": "stylelint '**/*.{css,vue}' --allow-empty-input",
    "ci:lint-format": "run-p ci:lint:* format:check -c -l",
    "ci:lint:js": "pnpm run lint:js && pnpm run lint:js -f json -o test-results/eslint.json",
    "ci:lint:css": "pnpm run lint:css -f json -o test-results/stylelint.json",
    "build": "pnpm run -r build",
    "build:components": "pnpm run --filter @knime/kds-components build",
    "build:styles": "pnpm run --filter @knime/kds-styles build",
    "ci:build": "pnpm run build:components",
    "dev": "pnpm run --filter @knime/kds-documentation storybook",
    "test:unit": "vitest",
    "coverage": "vitest run --coverage",
    "changeset": "pnpm exec changeset",
    "changeset:version": "pnpm exec changeset version",
    "changeset:publish": "pnpm exec changeset publish",
    "publish": "pnpm build && pnpm changeset:publish",
    "audit": "pnpm audit --prod",
    "prepare": "husky",
    "license-check": "license-check -c",
    "postinstall": "run-p license-check build:styles",
    "type-check": "vue-tsc --build"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@knime/eslint-config": "9.3.0",
    "@knime/licenses": "1.3.2",
    "@knime/utils": "^1.8.0",
    "@tsconfig/node24": "catalog:",
    "@vitest/coverage-v8": "catalog:vitest",
    "eslint": "catalog:",
    "eslint-plugin-storybook": "catalog:storybook",
    "globals": "16.4.0",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "npm-run-all": "catalog:",
    "prettier": "catalog:",
    "stylelint": "catalog:",
    "vitest": "catalog:vitest",
    "vue-tsc": "catalog:",
    "@types/node": "catalog:",
    "@vue/tsconfig": "catalog:",
    "jsdom": "catalog:",
    "@types/jsdom": "catalog:"
  },
  "engines": {
    "node": "24.10.0",
    "npm": "please-use-pnpm"
  },
  "packageManager": "pnpm@10.20.0",
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "@babel/runtime@<7.26.10": ">=7.26.10"
    },
    "auditConfig": {
      "ignoreGhsas": [
        "GHSA-v6h2-p8h4-qcjw"
      ]
    },
    "onlyBuiltDependencies": [
      "style-dictionary"
    ]
  }
}
